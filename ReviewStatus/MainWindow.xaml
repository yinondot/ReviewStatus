<Window x:Class="ReviewStatus.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ReviewStatus" xmlns:vm="clr-namespace:ReviewStatus.ViewModels" mc:Ignorable="d" Title="MainWindow" Height="450" Width="450">

  <Window.DataContext>
    <vm:MainViewModel />
  </Window.DataContext>
  <StackPanel x:Name="stckMain" FlowDirection="RightToLeft">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="5*" />
        <ColumnDefinition Width="5*" />
      </Grid.ColumnDefinitions>

      <Button x:Name="btnChooseFile" Style="{StaticResource btnSimple}" Content="בחר קובץ" />
      <Label x:Name="tbChosenFileName" Style="{StaticResource lblSimple}" 
             HorizontalAlignment="Center"
             Margin="10,10,30,10"
             Grid.Column="1" Content="{Binding ChosenFile}" />
    </Grid>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="5*" />
        <ColumnDefinition Width="5*" />
      </Grid.ColumnDefinitions>
      <Grid.Resources>
        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource cbItemSimple}">
        </Style>
      </Grid.Resources>
      <Label x:Name="lblHowManyFields" Style="{StaticResource lblSimple}" Content="כמה שדות ר&quot;מ להוסיף" />
      <ComboBox x:Name="cbHowManyFields" Grid.Column="1" Style="{StaticResource cbSimple}" FlowDirection="LeftToRight" ItemsSource="{Binding NumberOfFields}" Grid.ColumnSpan="2" Margin="0,10,30,10">

      </ComboBox>
    </Grid>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="5*" />
        <ColumnDefinition Width="5*" />
      </Grid.ColumnDefinitions>
      <Label x:Name="lblDefaultName" Style="{StaticResource lblSimple}">
        <Label.Content>
          <AccessText TextWrapping="Wrap" Text="שם ברירת המחדל לשדה ר&quot;מ [Status]" />
        </Label.Content>       
      </Label>
      <TextBox x:Name="tbDedaultFieldName" Grid.Column="1" Style="{StaticResource tbSimple}"/>
    </Grid>

    <CheckBox x:Name="cbAddCommentField" Style="{StaticResource ckbSimple}" Content="האם להוסיף שדות הערות" />
    <GroupBox x:Name="gbComments" />
  </StackPanel>
</Window>
